{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "strict": true,
    "jsx": "react",
    "rootDir": "./src",
    "outDir": "./lib",
    "typeRoots": [
      "typings/**/*.d.ts",
      "./node_modules/@types/**/*",
    ],
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "@components/*": ["components/*"]
    },
    "baseUrl": "./src",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": false,
    "allowJs": true,
    "pretty": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmit": false,
    "lib": [
      "es5",
      "dom",
      "esnext",
      "es2017",
      "es2015",
      "es2016"
    ]
  },
  "compileOnSave": false,
  "include": ["./src/**/*"],
  "exclude": [
    "config/**/*",
    "lib/**/*",
    "scripts/**/*",
    "__tests__/**/*",
    "src/**/*.js",
    "typings/**/*.d.ts",
    "node_modules",
  ]
}
